{% extends "base.twig" %}

{% block title %}Ajouter votre message{% endblock %}

{% block content %}


    <form action="{{ url_for('register-data')}}" method="POST">
        <h2>Creer un compte</h2>
        <div class="field">
            <label for="pseudo">Pseudo</label>
            <input id="pseudo" name="pseudo" required/>

        </div>
        <div class="field">
            <label for="pseudo">Mot de passe</label>
            <input type="password" id="password" name="password" required />

        </div>
        <button type="submit" class="btn">cr√©er un compte</button>

        {% if errors is defined %}
            <div class="errors">
                {% for error in errors %}
                    <p>{{ error }}</p>
                {% endfor %}
            </div>
        {% endif %}

    </form>


    <style>

        #content{
            width: 100%;
        }
        h2{
            margin: 12px 0;
        }
        body{
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        form{
            flex-direction: column;
            width: 100%;
            max-width: 550px;
            min-width: 200px;
            margin: 0 auto;
            padding: 20px;
            background-color: var(--surface);
            border-radius: 18px;
        }
        textarea{
            height: 200px;
        }
{% endblock %}